<%- include('../partials/head',{styles:['editUser']}) %>

    <body>
        <%- include('../partials/header') %>
            <main class="editUser">
                <div class="overlay" id="overlay">
                    <div class="formularioRegistro" id="formularioRegistro">
                        <form class="form-horizontal" method="post"  action="/detail/edit/<%= user.id %>?_method=PUT" enctype="multipart/form-data">
                            <div class="col-12">
                                <h2 class="products-title">Estás editando: Usuario <%= user.id %></h2>
                            </div>
                            <div class="divNombreApellido">
                                <div class="nombre">
                                    <label>Nombres:</label>
                                    <input type="text" name="first_name" id="first_name" class="input-control" value="<%= user.first_name %>"> 
                                </div>
                                <div class="apellido">
                                    <label>Apellidos:</label>
                                    <input type="text" name="last_name" id="last_name" class="input-control" value="<%= user.last_name %>"> 
                                </div>
                            </div>
                            <div class="container">
                            <div class="celular">
                                <label>Celular:</label>
                                <input type="number" name="phone" id="phone" class="input-control" value="<%= user.phone %>">
                            </div>
                            <div class="idUser">
                                <label>Identificación:</label>
                                <input type="number" id="id_user" name="id_user" class="input-control" value="<%= user.id_user %>">
                            </div>
                            <div class="img-edit">
                                <label for="image" class="form-label">Imagen:</label>
                                <input type="file" id="image" name="image" class="form-input">
                            </div>
                        </div>
                            <div class="divCorreoContrasena">
                                <div class="correo">
                                    <label>Correo:</label>
                                    <input type="email" name="email" id="email"  class="input-control" value="<%= user.email %>">
                                </div>
                                <div class="contrasena">
                                    <label>Contraseña:</label>
                                    <input type="password" name="password" id="password" class="input-control" value="<%= user.password %>">
                                </div>
                            </div>
                           
    
                            <div class="boton-guardar">
                                <button type="submit" class="boton-formulario">GUARDAR</button>
                            </div>
                        </form>
                    </div>
                </div>

            </main>
            <%- include('../partials/footer') %>
    </body>

</html>