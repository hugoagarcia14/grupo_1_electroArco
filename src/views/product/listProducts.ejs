<%- include('../partials/head',{styles:['listProducts.css']}) %>

<body>
    <%- include('../partials/header') %>
    <main>
        <% product.forEach((product) => { %>
        <div class="ofertas">
            <div class="ofertasBloques">
                <div class="bloque1">
                    <div class="articulo-horno">
                        <div class="horno"><img src="images/products/<%= product.image %>"> </div>
                        <div class="relative-horno">
                            <div class="img-envio"><i class="fa-solid fa-truck"></i></div>
                            <div class="precio-descuento">
                                <div class="precios"><%= product.price %></div>
                                <div class="desc">40% OFF</div>
                            </div>
                            <div class="descripcion"><%= product.description %></div>
                        </div>
                    </div>
                    <% }) %>

                    <div class="articulo-laptop">
                        <div class="laptop"><img src="images/products/laptop.jpg"></div>
                        <div class="relative-laptop">
                            <div class="img-envio"><i class="fa-solid fa-truck"></i></div>
                            <div class="precio-descuento">
                                <div class="precios">$230.000</div>
                                <div class="desc">20% off</div>
                            </div>
                        </div>
                    </div>
                </div>


            </main>
            <%- include('../partials/footer') %>

    </body>

    </html>